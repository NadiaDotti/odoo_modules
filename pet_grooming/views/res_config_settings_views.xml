<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_inherit_pet_grooming" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pet.grooming</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="calendar.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//app/block[@name='calendar']" position="after">
                <block title="Pet Grooming Calendar Settings" name="calendar">
                    <setting string="Pet Grooming" help="Activate this to set the appointment as the default pet grooming." id="default_pet_appointment_setting">
                        <field name="pet_grooming_pet_appointment" />
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
