<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="pet_breed_view_tree" model="ir.ui.view">
            <field name="name">pet.breed.view.tree</field>
            <field name="model">pet.breed</field>
            <field name="arch" type="xml">
                <list string="Pet Breed View Tree" editable="bottom">
                    <field name="name"></field>
                    <field name="pet_type_id" options="{'no_create': True}"></field>
                </list>
            </field>
        </record>

        <record id="pet_breed_actions" model="ir.actions.act_window">
            <field name="name">Pet Breed</field>
            <field name="path">pet-breed</field>
            <field name="res_model">pet.breed</field>
            <field name="view_mode">list</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a Pet Breed!
                </p>
            </field>
        </record>
        <record id="pet_action_view_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">list</field>
            <field name="view_id" ref="pet_breed_view_tree"/>
        </record>

        <menuitem id="menu_pet_breed"
            name="Pet Breed"
            action="pet_breed_actions"
            parent="root_menu_pet_grooming"
            sequence="5"/>
    </data>
</odoo>